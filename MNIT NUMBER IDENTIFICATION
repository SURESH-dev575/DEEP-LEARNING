CNNS(CONVOLUTIONAL NEURAL NETWOKS)

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import tensorflow as tf
from tensorflow import keras
from tensorflow.keras import layers,Model,Sequential,models

# (train_images,train_labels),(test_images,test_labesl) = tf.keras.datasets.mnist.load_data()
(train_images, train_labels), (test_images, test_labels) = tf.keras.datasets.mnist.load_data()

train_images.shape
test_images.shape

train_labels.shape
# test_labels.shape

d=train_images[0].reshape((28,28))
d.shape
# test_labels[0]



plt.figure(figsize=(10,8))
for i in range(10):
  plt.subplot(2,5,i+1)
  data = train_images[i].reshape((28,28))
  plt.imshow(data,cmap='gray')
  plt.axis('off')

# plt.tight_layout()

print(train_labels[0])
train_labels = tf.keras.utils.to_categorical(train_labels)
test_labels = tf.keras.utils.to_categorical(test_labels)



train_labels[0]

print(train_images[0].shape)
train_images = np.expand_dims(train_images.astype('float32') / 255, -1)
test_images = np.expand_dims(test_images.astype('float32') / 255, -1)
print(train_images[0].shape)

len(test_labels)

def creation():
  model = models.Sequential([
  layers.RandomRotation(0.1),
  layers.RandomZoom(0.1),
  
  
  layers.Conv2D(16,(3,3),activation='relu',input_shape=(28,28,1)),
  layers.BatchNormalization(),
  layers.MaxPool2D((2,2)),
  
  
  layers.Conv2D(32,(3,3),activation='relu'),
  layers.BatchNormalization(),
  layers.MaxPool2D((2,2)),
                                                   
  layers.Conv2D(32,(3,3),activation='relu'),
  layers.BatchNormalization(),

  
  layers.Flatten(),
  layers.Dense(128,activation='relu'),
  layers.Dropout(0.5),
  layers.Dense(64,activation='relu'),
  layers.Dropout(0.5),
  layers.Dense(10,activation='softmax')])
  return model

model = creation()

model.compile(optimizer='Adam',loss='categorical_crossentropy')


history = model.fit(train_images,train_labels,epochs=15,validation_split=0.3,verbose=1)

model.save("mnist_model.h5")


from tensorflow.keras.models import load_model
model = load_model("mnist_model.h5")

# Show the same image
plt.imshow(test_images[50].reshape(28, 28), cmap='gray')
plt.axis('off')


# Predict on the same image
prediction = model.predict(test_images[50].reshape(1, 28, 28, 1))
print("Predicted Digit:", np.argmax(prediction))
